@model LoginWebApp.Models.ResetPasswordViewModel

@{
    ViewBag.Title = "Restablecer Contraseña";
    Layout = null;
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <title>Restablecer Contraseña</title>
    @Styles.Render("~/Content/css")
    <style>
        body {
            font-family: Arial, sans-serif;
            background: #f7f7f7;
            margin: 0;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
        }

        .container {
            width: 100%;
            max-width: 450px;
        }

        .card {
            background-color: #fff;
            border-radius: 10px;
            box-shadow: 0px 5px 20px rgba(0, 0, 0, 0.1);
            padding: 20px;
            margin: 15px;
        }

        .title {
            font-size: 24px;
            font-weight: bold;
            text-align: center;
            color: #333;
            margin-bottom: 20px;
        }

        .form-group {
            margin-bottom: 20px;
        }

            .form-group input[type="password"] {
                width: 100%;
                padding: 10px;
                font-size: 16px;
                border-radius: 5px;
                border: 1px solid #dddddd;
            }

            .form-group input[type="submit"] {
                width: 100%;
                padding: 10px;
                font-size: 16px;
                border-radius: 5px;
                border: none;
                background-color: #5cb85c;
                color: white;
                cursor: pointer;
            }

                .form-group input[type="submit"]:hover {
                    background-color: #4cae4c;
                }
    </style>
</head>
<body>

    <div class="container">
        @using (Html.BeginForm("ResetPassword", "Password", FormMethod.Post))
        {
            @Html.AntiForgeryToken()
            @Html.HiddenFor(m => m.Token)

            <div class="card">
                <div class="title">Restablecer Contraseña</div>

                <div class="form-group">
                    @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "Nueva Contraseña", required = "required" })
                </div>

                <div class="form-group">
                    @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", placeholder = "Confirmar Nueva Contraseña", required = "required" })
                </div>

                <div class="form-group">
                    <input type="submit" value="Restablecer" class="btn btn-primary" />
                </div>
            </div>
        }
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
</body>
</html>
