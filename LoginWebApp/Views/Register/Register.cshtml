@model LoginWebApp.Models.RegisterViewModel

@{
    ViewBag.Title = "Registro";
    Layout = null;
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <title>Registro</title>
    @Styles.Render("~/Content/css")
    <style>
        /* Estilos CSS proporcionados */
        body {
            font-family: Arial, sans-serif;
            background: #f7f7f7;
            margin: 0;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
        }

        .container {
            width: 100%;
            max-width: 450px;
        }

        .card {
            background-color: #fff;
            border-radius: 10px;
            box-shadow: 0px 5px 20px rgba(0, 0, 0, 0.1);
            padding: 20px;
            margin: 15px;
        }

        .title {
            font-size: 24px;
            font-weight: bold;
            text-align: center;
            color: #333;
            margin-bottom: 20px;
        }

        .form-group {
            margin-bottom: 20px;
        }

            .form-group input[type="text"],
            .form-group input[type="email"],
            .form-group input[type="password"] {
                width: 100%;
                padding: 10px;
                font-size: 16px;
                border-radius: 5px;
                border: 1px solid #dddddd;
            }

            .form-group input[type="submit"] {
                width: 100%;
                padding: 10px;
                font-size: 16px;
                border-radius: 5px;
                border: none;
                background-color: #5cb85c;
                color: white;
                cursor: pointer;
            }

                .form-group input[type="submit"]:hover {
                    background-color: #4cae4c;
                }

            .form-group a {
                text-decoration: none;
                color: #5cb85c;
                display: block;
                text-align: center;
                margin-top: 15px;
            }
    </style>
</head>
<body>

    <div class="container">
        @using (Html.BeginForm("Register", "Register", FormMethod.Post))
        {
            @Html.AntiForgeryToken()

            <div class="card">
                <div class="title">Regístrate</div>

                <div class="form-group">
                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = "Correo electrónico", required = "required" })
                </div>

                <div class="form-group">
                    @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "Contraseña", required = "required" })
                </div>

                <div class="form-group">
                    @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", placeholder = "Confirmar contraseña", required = "required" })
                </div>

                <div class="form-group">
                    @Html.RadioButtonFor(m => m.UserType, "Cliente", new { id = "clientRadio" }) Cliente
                    @Html.RadioButtonFor(m => m.UserType, "Experto", new { id = "expertRadio" }) Experto
                </div>

                <div class="form-group">
                    <input type="submit" value="Registrarse" class="btn btn-primary" />
                </div>
            </div>
        }

        <div class="form-group">
            <a href="@Url.Action("Login", "Authentication")">¿Ya tienes una cuenta? Inicia sesión</a>
        </div>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
</body>
</html>
